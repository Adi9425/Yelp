    <style>
        .background-container {
            background-image: url('your-background-image-url.jpg');
            background-size: cover; /* Adjusts the background image size to cover the entire container */
            height: 100vh; /* Adjust the height as needed */
            transition: filter 0.3s ease; /* Smooth transition for hover effect */
        }
    
        .background-container:hover {
            filter: brightness(80%); /* Reduce brightness on hover */
        }
    
        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            padding: 20px; /* Add padding to give some space around the cards */
        }
    
        .custom-card {
            flex-basis: calc(33.33% - 20px); /* 33.33% width for each card with 20px spacing between */
            margin-bottom: 20px;
            border: none;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease-in-out;
            /* transform: translate(-50%, -50%) scale(.3); */
        }
        .custom-card:hover{
            z-index: 1;
        }
    
        .custom-img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px 10px 0 0; /* Rounded top corners */
        }
    
        .card-body {
            padding: 20px;
        }
    
        .custom-title {
            color: #333;
            font-size: 1.5em;
            margin-bottom: 10px;
            font-weight: bold;
        }
    
        .custom-description {
            color: #666;
            margin-bottom: 15px;
        }
    
        .custom-location {
            margin-bottom: 15px;
        }
    
        .custom-btn {
            transition: all 0.3s ease-in-out;
            background-color: #ff5a5f;
            border: none;
            border-radius: 0 0 10px 10px; /* Rounded bottom corners */
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            font-weight: bold;
        }
    
        .custom-btn:hover {
            background-color: #ff3e3f;
        }
      
    </style>
 <div class="card-container">
    <% for(let i = 0; i < campgrounds.length; i++) { %>
        <div class="card custom-card" id="campground_<%= i %>">
            <img class="card-img custom-img" src="<%= campgrounds[i].images[0].url %>" alt="Campground Image">
            <div class="card-body">
                <h5 class="card-title custom-title"><%= campgrounds[i].title %></h5>
                <p class="card-text custom-description"><%= campgrounds[i].description %></p>
                <p class="card-text custom-location"><small class="text-muted"><%= campgrounds[i].location %></small></p>
                <a class="btn btn-primary custom-btn" href="/campgrounds/<%= campgrounds[i]._id  %>">View <%= campgrounds[i].title %></a>
            </div>
        </div>
    <% } %>
</div>

    
    <% layout('/layout/boilerplate') %>
